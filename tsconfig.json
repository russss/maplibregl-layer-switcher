{
  "compilerOptions": {
    "incremental": true,
    "target": "es2016",
    "module": "es2015",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "lib",
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src"
  ]
}